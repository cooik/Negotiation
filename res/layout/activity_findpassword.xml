<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    android:orientation="vertical" >

    <include
        android:id="@+id/findpassword_title"
        layout="@layout/public_title" />

    <TextView
        android:id="@+id/findpassword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="请确保你的手机畅通，用于接受验证码短信"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/findpassword_phone_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/register_bg"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/findpassword_phone_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_title_height"
            android:hint="请输入手机号"
            android:background="@drawable/register_bg"
            android:textColorHint="#cccccc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/findpassword_password_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/findpassword_code_et"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/public_title_height"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:background="@drawable/register_bg"
            android:textColorHint="#cccccc" />

        <net.zhomi.negotiation.view.TimeButton
            android:id="@+id/findpassword_getcode_bn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/public_title_height"
            android:singleLine="true"
            android:text="60秒后重新获取" />
    </LinearLayout>

    <Button
        android:id="@+id/findpasswordnext_bn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="下一步" 
        />

</LinearLayout>
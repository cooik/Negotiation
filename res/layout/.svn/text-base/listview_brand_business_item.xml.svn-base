<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/brand_business_item_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:src="@drawable/icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/brand_business_item_logo"
        android:layout_alignTop="@id/brand_business_item_logo"
        android:layout_toRightOf="@id/brand_business_item_logo"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/brand_business_item_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="艾迪丹顿（大洋百货店））"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/brand_business_item_district"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="建邺区"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/brand_business_item_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="水西门大街272号"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/brand_business_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/public_interval_right"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="4.9km"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
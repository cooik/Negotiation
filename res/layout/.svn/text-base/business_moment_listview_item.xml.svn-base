<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/public_interval_left"
    android:layout_marginRight="@dimen/public_interval_right"
    android:layout_marginTop="18dip"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/business_moment_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="—昨天—" />

    <ImageView
        android:id="@+id/business_moment_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/business_moment_item_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/public_title_height"
        android:layout_gravity="center"
        android:text="这家公司把南京最大的菜市场变成了文化艺术中心" />

</LinearLayout>